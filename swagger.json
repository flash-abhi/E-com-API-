{
  "openapi": "3.0.0",
  "info": {
    "version": "0.1.9",
    "title": "E-commerce API",
    "description": "API for E-commerce Application"
  },
  "servers": [{ "url": "http://localhost:4000" }],
  "components": {
    "securitySchemes": {
      "JWT": {
        "type": "apiKey",
        "in": "header",
        "name": "Authorization"
      }
    }
  },
  "paths": {
    "/api/products": {
      "get": {
        "tags": ["Products"],
        "summary": "Get Products",
        "description": "User will get all Products",
        "security": [
          {
            "JWT": {}
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "401": {
            "description": "Unauthorized"
          }
        }
      }
    },
    "/api/users/signin": {
      "post": {
        "tags": ["SignIn"],
        "summary": "Login",
        "description": "User login to get a JWT Token",
        "requestBody": {
          "description": "User Credentials",
          "content": {
            "application/json":{
                "schema":{
                    "type": "object",
                    "properties": {
                      "email": {
                        "type": "string"
                      },
                      "password": {
                        "type": "string"
                      }
                }
            }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK"
          },
          "400": {
            "description": "Incorrect Credentials"
          }
        }
      }
    }
  }
}
